{
  "name": "@zcong/koa-casbin",
  "version": "0.2.0",
  "description": "casbin middleware for koa",
  "main": "./dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "test": "npm run lint && npm run jest",
    "test:cov": "npm run lint && npm run jest:cov",
    "lint": "tslint -p .",
    "format": "prettier --write '**/*.{ts,json,md}'",
    "jest": "jest",
    "jest:cov": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "types": "./dist/index.d.ts",
  "author": "zcong1993",
  "license": "MIT",
  "peerDependencies": {
    "koa": "^2.8.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.0",
    "@types/koa": "^2.13.1",
    "@types/koa-router": "^7.4.2",
    "@types/node": "^14.0.0",
    "@types/supertest": "^2.0.8",
    "husky": "^7.0.0",
    "jest": "^26.0.0",
    "koa": "^2.8.1",
    "koa-router": "^10.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.0.0",
    "supertest": "^6.0.0",
    "ts-jest": "^26.0.0",
    "tslint": "^6.0.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "*.{js,json,ts}": [
      "yarn format",
      "git add ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && lint-staged"
    }
  },
  "dependencies": {
    "casbin": "^5.0.0",
    "debug": "^4.1.1"
  }
}
